{
    "clangd.fallbackFlags": [
        // 设置clangd代码检查的c++版本，目前默认是c++14
        "-std=c++2a",
        // 增加项目自身头文件依赖路劲，因为使用vs2019编译不会生成compile_command.json文件，项目自己的头文件就不会找到
        "-I${workspaceFolder}", // 项目根目录
        "-I${workspaceFolder}/src",
        "-I${workspaceFolder}/third_party/glfw/include",
        "-I${workspaceFolder}/third_party/glad/include",
        "-I${workspaceFolder}/third_party/glm",
        "-I${workspaceFolder}/third_party/assimp/include",
        "-I${workspaceFolder}/third_party/assimp/contrib",
        "-I${workspaceFolder}/third_party/imgui",
        "-I${workspaceFolder}/third_party/json11",
        "-I${workspaceFolder}/third_party/md5",
        "-I${workspaceFolder}/third_party/stb/include",
        "-I${workspaceFolder}/third_party/vulkan/include",
        "-I${workspaceFolder}/third_party/glslang",
        "-I${workspaceFolder}/third_party/vma",
        "-I${workspaceFolder}/third_party/renderdoc", // 第三方依赖的头文件目录
    ]
}